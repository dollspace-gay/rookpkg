[environment]

[build]
prep = """
cd $ROOKPKG_BUILD
rm -rf plasma-desktop-*
tar xf $ROOKPKG_SOURCES/plasma-desktop-*.tar.xz
"""

configure = """
cd $ROOKPKG_BUILD/plasma-desktop-*
mkdir -p build
cd build
cmake .. \
      -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release \
      -DBUILD_TESTING=OFF \
      -G Ninja
"""

build = """
cd $ROOKPKG_BUILD/plasma-desktop-*/build
ninja -j$ROOKPKG_JOBS
"""

check = ""

install = """
cd $ROOKPKG_BUILD/plasma-desktop-*/build
DESTDIR=$ROOKPKG_DESTDIR ninja install
"""

[files]
"usr/lib/libkfontinst.so" = { mode = 755 }
"usr/lib/libkfontinstui.so" = { mode = 755 }
"usr/lib/qt6/plugins/plasma/kcms/systemsettings/" = {}
"usr/lib/qt6/plugins/plasma/kcminit/" = {}
"usr/share/kpackage/kcms/" = {}
"usr/share/plasma/plasmoids/" = {}

[config_files]

[scripts]
pre_install = ""
post_install = "/sbin/ldconfig"
pre_remove = ""
post_remove = "/sbin/ldconfig"
pre_upgrade = ""
