[package]
name = "plasma-desktop"
version = "6.2.4"
release = 1
summary = "KDE Plasma desktop environment"
description = """
Plasma Desktop provides the desktop-specific components for KDE Plasma
including the application menu, desktop folder view, and system settings
modules for configuring the desktop experience.
"""
homepage = "https://invent.kde.org/plasma/plasma-desktop"
license = "GPL-2.0-or-later"
maintainer = "Friendly Society of Corvids <corvids@rookeryos.dev>"
arch = "x86_64"

