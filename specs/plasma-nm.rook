plasma-workspace = ">= 1.0"
qca-qt6 = ">= 1.0"
qcoro = ">= 1.0"

[optional_depends]
mobile-broadband-provider-info = ">= 20231201"
openconnect = ">= 1.0"
qtwebengine = ">= 1.0"

[environment]

[build]
prep = """
cd $ROOKPKG_BUILD
rm -rf plasma-nm-*
tar xf $ROOKPKG_SOURCES/plasma-nm-*.tar.xz
"""

configure = """
cd $ROOKPKG_BUILD/plasma-nm-*
mkdir -p build
cd build
cmake .. \
      -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release \
      -DBUILD_TESTING=OFF \
      -G Ninja
"""

build = """
cd $ROOKPKG_BUILD/plasma-nm-*/build
ninja -j$ROOKPKG_JOBS
"""

check = ""

install = """
cd $ROOKPKG_BUILD/plasma-nm-*/build
DESTDIR=$ROOKPKG_DESTDIR ninja install
"""

[files]
"usr/lib/libplasmanm_editor.so" = { mode = 755 }
"usr/lib/libplasmanm_internal.so" = { mode = 755 }
"usr/lib/qt6/plugins/plasma/kcms/systemsettings/" = {}
"usr/lib/qt6/plugins/plasma/network/vpn/" = {}
"usr/share/plasma/plasmoids/org.kde.plasma.networkmanagement/" = {}

[config_files]

[scripts]
pre_install = ""
post_install = "/sbin/ldconfig"
pre_remove = ""
post_remove = "/sbin/ldconfig"
pre_upgrade = ""
post_upgrade = "/sbin/ldconfig"

