[package]
name = "plasma-nm"
version = "6.4.4"
release = 1
summary = "KDE Plasma NetworkManager applet"
description = """
Plasma NM provides the NetworkManager applet for KDE Plasma. It allows
users to manage network connections, Wi-Fi, VPN, and other network
settings from the system tray.
"""
homepage = "https://invent.kde.org/plasma/plasma-nm"
license = "GPL-2.0-or-later"
maintainer = "Friendly Society of Corvids <corvids@rookeryos.dev>"
arch = "x86_64"

[sources]
source0 = { url = "http://corvidae.social/RookerySource/plasma-nm-6.4.4.tar.xz", sha256 = "850638d1f4cc3b0a1012f049af5e1203ef57a1ef1fc21e5082c82bdf13bcb657" }

[patches]

[build_depends]
gcc = ">= 10.0"
cmake = ">= 3.20"
ninja = ">= 1.8"
extra-cmake-modules = ">= 6.0"
qt6 = ">= 6.7"
kf6-kcmutils = ">= 6.0"
kf6-kconfig = ">= 6.0"
kf6-kcoreaddons = ">= 6.0"
kf6-kdbusaddons = ">= 6.0"
kf6-ki18n = ">= 6.0"
kf6-kio = ">= 6.0"
kf6-kirigami = ">= 6.0"
kf6-knotifications = ">= 6.0"
kf6-kservice = ">= 6.0"
kf6-ksvg = ">= 6.0"
kf6-kwallet = ">= 6.0"
kf6-kwindowsystem = ">= 6.0"
kf6-networkmanager-qt = ">= 6.0"
kf6-modemmanager-qt = ">= 6.0"
kf6-prison = ">= 6.0"
kf6-solid = ">= 6.0"
libplasma = ">= 6.2"
plasma5support = ">= 6.2"
networkmanager = ">= 1.40"
mobile-broadband-provider-info = ">= 20231201"
qca = ">= 2.3"
pkgconf = ">= 1.0"
openconnect = ">= 1.0"
qtwebengine = ">= 1.0"

[depends]
glibc = ">= 2.39"
