kf6-kirigami = ">= 6.0"
kf6-knotifications = ">= 6.0"
kf6-kservice = ">= 6.0"
kf6-ksvg = ">= 6.0"
kf6-kwallet = ">= 6.0"
kf6-kwindowsystem = ">= 6.0"
kf6-networkmanager-qt = ">= 6.0"
kf6-modemmanager-qt = ">= 6.0"
kf6-prison = ">= 6.0"
kf6-solid = ">= 6.0"
libplasma = ">= 6.2"
plasma5support = ">= 6.2"
networkmanager = ">= 1.40"
