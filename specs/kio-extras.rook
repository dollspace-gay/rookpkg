[metadata]
keywords = ["kio-extras", "kio", "sftp", "smb", "mtp", "kde"]
categories = ["libraries", "network", "kde"]

[signing]
master_keys_dir = "/etc/rookpkg/keys/master"
packager_keys_dir = "/etc/rookpkg/keys/packager"

[security]
