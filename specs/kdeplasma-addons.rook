[package]
name = "kdeplasma-addons"
version = "6.2.4"
release = 1
summary = "Additional KDE Plasma widgets and applets"
description = """
KDE Plasma Addons provides additional widgets and applets for Plasma,
including a dictionary, calculator, color picker, comic strip viewer,
and many other useful desktop components.
"""
homepage = "https://invent.kde.org/plasma/kdeplasma-addons"
license = "GPL-2.0-or-later"
maintainer = "Friendly Society of Corvids <corvids@rookeryos.dev>"
arch = "x86_64"

[sources]
source0 = { url = "https://download.kde.org/stable/plasma/6.2.4/kdeplasma-addons-6.2.4.tar.xz", sha256 = "FIXME" }

[patches]

