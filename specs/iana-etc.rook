[depends]

[optional_depends]

[environment]

[build]
prep = """
cd $ROOKPKG_BUILD
rm -rf iana-etc-*
tar xf $ROOKPKG_SOURCES/iana-etc-*.tar.gz
"""

configure = """
# iana-etc doesn't need configuration
"""

build = """
# iana-etc doesn't need building
"""

check = """
# iana-etc doesn't have tests
"""

install = """
cd $ROOKPKG_BUILD/iana-etc-*
mkdir -p $ROOKPKG_DESTDIR/etc
cp -fv services protocols $ROOKPKG_DESTDIR/etc/
"""

