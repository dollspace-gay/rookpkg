[package]
name = "iana-etc"
version = "20250807"
release = 1
summary = "Network services and protocol data files"
description = """
The iana-etc package provides data for network services and protocols.
It contains the /etc/services and /etc/protocols files which are essential
for the proper functioning of many network applications.
"""
homepage = "https://www.iana.org/protocols"
license = "MIT"
maintainer = "Friendly Society of Corvids <corvids@rookeryos.dev>"
arch = "any"

[sources]
source0 = { url = "https://github.com/Mic92/iana-etc/releases/download/20250807/iana-etc-20250807.tar.gz", sha256 = "FIXME" }

[patches]

