]

[metadata]
keywords = ["cups", "printing", "ipp", "printers"]
categories = ["system", "printing"]

[signing]
master_keys_dir = "/etc/rookpkg/keys/master"
packager_keys_dir = "/etc/rookpkg/keys/packager"

[security]
