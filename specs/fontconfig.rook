[package]
name = "fontconfig"
version = "2.17.1"
release = 1
summary = "Font configuration and customization library"
description = """
Fontconfig is a library for configuring and customizing font access. It is
designed to locate fonts within the system and select them according to
requirements specified by applications.
"""
homepage = "https://www.freedesktop.org/wiki/Software/fontconfig/"
license = "MIT"
maintainer = "Friendly Society of Corvids <corvids@rookeryos.dev>"
arch = "x86_64"

[sources]
source0 = { url = "https://gitlab.freedesktop.org/api/v4/projects/890/packages/generic/fontconfig/2.17.1/fontconfig-2.17.1.tar.xz", sha256 = "9f5cae93f4fffc1fbc05ae99cdfc708cd60dfd6612ffc0512827025c026fa541" }

[patches]

[build_depends]
gcc = ">= 10.0"
make = ">= 4.0"
gperf = ">= 3.0"
freetype = ">= 2.13"

[depends]
glibc = ">= 2.39"
freetype = ">= 2.13"
expat = ">= 2.5"

[optional_depends]

[environment]

[build]
prep = """
cd $ROOKPKG_BUILD
rm -rf fontconfig-*
tar xf $ROOKPKG_SOURCES/fontconfig-*.tar.xz
"""

configure = """
cd $ROOKPKG_BUILD/fontconfig-*
./configure --prefix=/usr        \
            --sysconfdir=/etc    \
            --localstatedir=/var \
            --disable-docs       \
            --docdir=/usr/share/doc/fontconfig-2.17.1
"""

build = """
cd $ROOKPKG_BUILD/fontconfig-*
make -j$ROOKPKG_JOBS
"""

check = """
cd $ROOKPKG_BUILD/fontconfig-*
make check || true
"""

install = """
cd $ROOKPKG_BUILD/fontconfig-*
make DESTDIR=$ROOKPKG_DESTDIR install
"""

[files]
"usr/bin/fc-cache" = { mode = 755 }
"usr/bin/fc-cat" = { mode = 755 }
"usr/bin/fc-conflist" = { mode = 755 }
"usr/bin/fc-list" = { mode = 755 }
"usr/bin/fc-match" = { mode = 755 }
"usr/bin/fc-pattern" = { mode = 755 }
"usr/bin/fc-query" = { mode = 755 }
"usr/bin/fc-scan" = { mode = 755 }
"usr/bin/fc-validate" = { mode = 755 }
"usr/lib/libfontconfig.so" = { mode = 755 }
"usr/include/fontconfig/" = {}
"usr/lib/pkgconfig/fontconfig.pc" = {}
"usr/share/fontconfig/" = {}
"usr/share/man/man1/fc-cache.1" = {}
"usr/share/man/man1/fc-list.1" = {}
"usr/share/man/man1/fc-match.1" = {}
"usr/share/man/man5/fonts-conf.5" = {}

[config_files]
"etc/fonts/" = {}

[scripts]
pre_install = ""
post_install = """
/sbin/ldconfig
fc-cache -f
"""
pre_remove = ""
post_remove = "/sbin/ldconfig"
pre_upgrade = ""
post_upgrade = """
/sbin/ldconfig
fc-cache -f
"""

[[changelog]]
version = "2.17.1"
date = "2025-12-16"
author = "Friendly Society of Corvids <corvids@rookeryos.dev>"
changes = [
    "Updated to version 2.17.1 per BLFS",
    "Changed from meson to configure per BLFS"
]

