[package]
name = "plasma-workspace-wallpapers"
version = "6.2.4"
release = 1
summary = "KDE Plasma wallpapers"
description = """
Plasma Workspace Wallpapers provides additional wallpapers for the
KDE Plasma desktop environment.
"""
homepage = "https://invent.kde.org/plasma/plasma-workspace-wallpapers"
license = "LGPL-3.0-or-later"
maintainer = "Friendly Society of Corvids <corvids@rookeryos.dev>"
arch = "x86_64"

[sources]
source0 = { url = "https://download.kde.org/stable/plasma/6.2.4/plasma-workspace-wallpapers-6.2.4.tar.xz", sha256 = "FIXME" }

[patches]

[build_depends]
cmake = ">= 3.20"
ninja = ">= 1.8"
extra-cmake-modules = ">= 6.0"

[depends]
glibc = ">= 2.39"

[optional_depends]

[environment]

[build]
prep = """
cd $ROOKPKG_BUILD
rm -rf plasma-workspace-wallpapers-*
tar xf $ROOKPKG_SOURCES/plasma-workspace-wallpapers-*.tar.xz
"""

configure = """
cd $ROOKPKG_BUILD/plasma-workspace-wallpapers-*
mkdir -p build
cd build
cmake .. \
      -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release \
      -G Ninja
"""

build = """
cd $ROOKPKG_BUILD/plasma-workspace-wallpapers-*/build
ninja -j$ROOKPKG_JOBS
"""

check = ""

install = """
cd $ROOKPKG_BUILD/plasma-workspace-wallpapers-*/build
DESTDIR=$ROOKPKG_DESTDIR ninja install
"""

[files]
"usr/share/wallpapers/" = {}

[config_files]

[scripts]
pre_install = ""
post_install = ""
pre_remove = ""
post_remove = ""
pre_upgrade = ""
post_upgrade = ""

[[changelog]]
version = "6.2.4"
date = "2025-12-17"
author = "Friendly Society of Corvids <corvids@rookeryos.dev>"
changes = [
    "Initial Rookery OS package",
    "Based on BLFS 12.4 build instructions"
]

[metadata]
keywords = ["plasma-workspace-wallpapers", "wallpapers", "kde", "plasma"]
categories = ["themes", "desktop", "kde"]

[security]

[signing]
master_keys_dir = "/etc/rookpkg/keys/master"
packager_keys_dir = "/etc/rookpkg/keys/packager"
