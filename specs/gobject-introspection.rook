]

[metadata]
keywords = ["gobject-introspection", "gir", "gnome", "bindings"]
categories = ["libraries", "gnome", "development"]

[signing]
master_keys_dir = "/etc/rookpkg/keys/master"
packager_keys_dir = "/etc/rookpkg/keys/packager"

[security]
