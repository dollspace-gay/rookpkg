[metadata]
keywords = ["binutils", "linker", "assembler", "toolchain"]
categories = ["development", "toolchain"]

[signing]
master_keys_dir = "/etc/rookpkg/keys/master"
packager_keys_dir = "/etc/rookpkg/keys/packager"

[security]
