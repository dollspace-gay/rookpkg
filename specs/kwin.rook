[environment]

[build]
prep = """
cd $ROOKPKG_BUILD
rm -rf kwin-*
tar xf $ROOKPKG_SOURCES/kwin-*.tar.xz
"""

configure = """
cd $ROOKPKG_BUILD/kwin-*
mkdir -p build
cd build
cmake .. \
      -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release \
      -DBUILD_TESTING=OFF \
      -G Ninja
"""

build = """
cd $ROOKPKG_BUILD/kwin-*/build
ninja -j$ROOKPKG_JOBS
"""

check = ""

install = """
cd $ROOKPKG_BUILD/kwin-*/build
DESTDIR=$ROOKPKG_DESTDIR ninja install
"""

[files]
"usr/bin/kwin_wayland" = { mode = 755 }
"usr/bin/kwin_x11" = { mode = 755 }
"usr/lib/libkwin.so" = { mode = 755 }
"usr/lib/libkwineffects.so" = { mode = 755 }
"usr/lib/libkwinglutils.so" = { mode = 755 }
"usr/lib/qt6/plugins/kwin/" = {}
"usr/lib/qt6/plugins/plasma/kcms/systemsettings/" = {}
"usr/share/kwin/" = {}

[config_files]

[scripts]
pre_install = ""
post_install = "/sbin/ldconfig"
pre_remove = ""
post_remove = "/sbin/ldconfig"
pre_upgrade = ""
post_upgrade = "/sbin/ldconfig"

