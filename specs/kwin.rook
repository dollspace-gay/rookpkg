[package]
name = "kwin"
version = "6.4.4"
release = 1
summary = "KDE Plasma window manager and compositor"
description = """
KWin is the window manager and compositor for KDE Plasma. It supports
both X11 and Wayland display protocols, providing window management,
desktop effects, and compositing functionality.
"""
homepage = "https://invent.kde.org/plasma/kwin"
license = "GPL-2.0-or-later"
maintainer = "Friendly Society of Corvids <corvids@rookeryos.dev>"
arch = "x86_64"

[sources]
source0 = { url = "http://corvidae.social/RookerySource/kwin-6.4.4.tar.xz", sha256 = "FIXME" }

